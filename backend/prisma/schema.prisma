generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AppointmentStatus {
  SCHEDULED
  COMPLETED
  CANCELED
  NO_SHOW
}

enum PaymentMethod {
  CASH
  CARD
  TRANSFER
}

model Customer {
  id        String   @id @default(uuid())
  fullName  String
  phone     String?  @unique
  email     String?  @unique
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  appointments Appointment[]
  purchases    Purchase[]
}

model Service {
  id          String   @id @default(uuid())
  name        String
  durationMin Int      // למשל 15, 60
  price       Int      // מומלץ לשמור באגורות/שקלים שלמים (תבחרי סטנדרט)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  appointmentItems AppointmentItem[]
}

model Appointment {
  id          String            @id @default(uuid())
  customerId  String
  startTime   DateTime
  endTime     DateTime
  status      AppointmentStatus @default(SCHEDULED)
  note        String?
  sendNotify  Boolean           @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  customer    Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  items       AppointmentItem[]

  @@index([startTime])
  @@index([customerId, startTime])
}

model AppointmentItem {
  id            String @id @default(uuid())
  appointmentId String
  serviceId     String
  price         Int
  durationMin   Int

  appointment Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  service     Service     @relation(fields: [serviceId], references: [id])

  @@index([appointmentId])
}

model Purchase {
  id          String   @id @default(uuid())
  customerId  String
  itemName    String   // לדוגמה: "פאה דגם X"
  paidPrice   Int
  purchaseAt  DateTime @default(now())
  warrantyEnd DateTime // שנה קדימה (או לפי מדיניות)
  note        String?

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  repairs  Repair[]

  @@index([customerId, purchaseAt])
  @@index([warrantyEnd])
}

model Repair {
  id         String   @id @default(uuid())
  purchaseId String
  repairAt   DateTime @default(now())
  description String?
  cost       Int      // כמה זה "עלה לה" (גם אם ללקוחה חינם במסגרת אחריות)
  isFree     Boolean  @default(false)

  purchase Purchase @relation(fields: [purchaseId], references: [id], onDelete: Cascade)

  @@index([purchaseId, repairAt])
}

model Payment {
  id            String        @id @default(uuid())
  appointmentId String?
  purchaseId    String?
  amount        Int
  method        PaymentMethod
  paidAt        DateTime      @default(now())
  note          String?

  @@index([paidAt])
}